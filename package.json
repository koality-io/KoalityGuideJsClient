{
  "name": "koality-guide-client",
  "version": "1.0.0",
  "description": "The KoalityGuide client connects a JavaScript application to the guides.",
  "author": "Nils Langner (nils.langner@leankoala.com)",
  "license": "MIT",
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/main.ts",
    "build": "tsc -p tsconfig.json",
    "build-all": "yarn clean && yarn build && yarn esbuild-node && yarn esbuild-browser",
    "esbuild-client": "esbuild src/client.ts --bundle --minify --sourcemap=external --outfile=dist/esbuild/client.js",
    "esbuild-client:dev": "esbuild src/client.ts --bundle --outfile=dist/esbuild/client.js",
    "esbuild-client:watch": "esbuild src/client.ts --bundle --watch --outfile=dist/esbuild/client.js"
  },
  "dependencies": {
    "axios": "^0.24.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "esbuild": "^0.14.0",
    "eslint": "^8.3.0",
    "jest": "^27.4.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2"
  }
}
